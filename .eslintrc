{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "standard",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "jsx-a11y",
    "react",
    "html",
    "import"
  ],
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": ["error","never"],
    "global-require": 0,
    "import/no-named-as-default": 0,
    "max-len": ["error",180],
    "no-console": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "no-underscore-dangle": 0,
    "object-curly-spacing": ["error","never"],
    "react/forbid-prop-types": 0,
  //  "react/jsx-filename-extension": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": 0, //enable later
    "spaced-comment": 0,
    "jsx-a11y/img-has-alt": 0,// remove after update
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "indent": [2, 2],
    "no-tabs": 0,
    "handle-callback-err": 0,
    "jsx-a11y/anchor-is-valid": 0,
   // "indent": [2, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
   // "react/prop-types": 0,
   // "react/jsx-indent-props": [2, "tab"]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack.config.prod.js"
      }
    },
    "react": {
      "version": "16.2"
    }
  }
}
